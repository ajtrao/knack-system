<p style="color: green"><%= notice %></p>



<div class="container">
  <div class="row">
    <div class="column">
      <h1>Employer details listed here</h1>
      <hr>
          <table>
            <thead>
              <tr>
                <th><%= " Name"%></th>
                <th><%= "Email"%></th>
                <th><%= "Age"%></th>
                <th><%= "Salary"%></th>
                <th><%=  "Department"%></th>
              </tr>
            </thead>

            <tbody>
              <% @employers.each do |employer| %>
                <tr>
                  <td><%= employer.name%></td>
                  <td><%= employer.email %></td>
                  <td><%= employer.age%></td>
                  <td><%= employer.salary%></td>
                  <td><%= employer.department%></td>
                  <td><%= link_to"show", employer, class:"btn btn-primary" %></td>
                  <td><%= link_to"Edit", edit_employer_path(employer), class:"btn btn-primary" %></td>
                  <td><%= button_to "Destroy this employer", employer, method: :delete, class:"btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>