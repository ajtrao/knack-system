<p style="color: green"><%= notice %></p>





<div class="container">
  <div class="row">
    <div class="column">
      <h1>Employer details listed here</h1>
      <hr>
    <%= form_tag( employers_path, method: 'get', local: true) do %>
      <%= text_field_tag(:search) %>
      <%= submit_tag("Search") %>
    <% end %>
      <br>
          <table class="table table-danger table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Department</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody class="table-primary">
              <% @employers.each do |employer| %>
                <tr>
                  <td><%= employer.name%></td>
                  <td><%= employer.email %></td>
                  <td><%= employer.age%></td>
                  <td><%= employer.salary%></td>
                  <td><%= employer.department%></td>
                  <td><%= link_to"show", employer, class:"btn btn-primary" %></td>
                  <td><%= link_to"Edit", edit_employer_path(employer), class:"btn btn-primary" %></td>
                  <td><%= button_to "Destroy", employer, method: :delete, data:{ confirm: "Are you sure want to delete" }, class:"btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <p>
            <%= link_to"create new employer", new_employer_path, class:"btn btn-primary"  %>|
            <%= link_to"Back to homepage", root_path, class:"btn btn-primary"  %>
          </p>
    </div>
  </div>
</div>